<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">
   
	<on-start>
		<evaluate expression="transactionHandler.init()" result="flowScope.transaction" />
	</on-start>

	<view-state id="createTransaction" view="transaction/add" model="transaction">
		<transition on="saveTransaction" to="addOrReview" validate="true" />
		<transition on="cancel" to="cancel" validate="false" />
	</view-state>
	
	<action-state id="addOrReview">
		<evaluate expression="transaction.getActions().size() > 0" />
		<transition on="yes" to="review" />
		<transition on="no" to="selectService">
			<evaluate expression="transactionHandler.startAddAction()" result="flowScope.action" />
		</transition>
	</action-state>
	
	<view-state id="review" view="transaction/review" model="transaction">
		<transition on="addNewAction" to="selectService">
			<evaluate expression="transactionHandler.startAddAction()" result="flowScope.action" />
		</transition>
		<transition on="submitToServer" to="backToDetail" history="invalidate">
			<evaluate expression="transactionHandler.save(transaction)" result="flashScope.transaction_id" />
			<set name="flashScope.successfulAdd" value="true" />
		</transition>
		<transition on-exception="dev.zachmaddox.scorecard.lib.domain.exception.TransactionNameNotUniqueException" to="createTransaction">
			<set name="flashScope.duplicateTransaction" value="true" />
		</transition>
		<transition on="editName" to="createTransaction" />
		<transition on="addDependencies" to="selectDependencies">
			<evaluate expression="transactionHandler.selectAction(transaction, requestParameters.selected_action_index)" result="flowScope.action" />
			<set name="flashScope.selectedActionIndex" value="requestParameters.selected_action_index" />
		</transition>
		<transition on="removeAction" to="review">
			<evaluate expression="transactionHandler.removeAction(transaction, requestParameters.selected_action_index)"></evaluate>
		</transition>
		<transition on="cancel" to="cancel" validate="false" />
	</view-state>
	
	<view-state id="selectDependencies" view="transaction/select-dependencies" model="action">
		<on-entry>
			<set name="viewScope.selectedActionIndex" value="flashScope.selectedActionIndex" />
		</on-entry>
		<transition on="cancel" to="cancel" validate="false" />
		<transition on="goBack" to="review" validate="false" />
		<transition on="selectedDependencies" to="review" validate="true">
			<evaluate expression="transactionHandler.addDependencies(transaction, action, selectedActionIndex)" result="flowScope.transaction" />
		</transition>
	</view-state>
	
	<view-state id="selectService" view="transaction/select-service" model="action">
		<on-entry>
			<evaluate expression="transactionHandler.loadServices()" result="flowScope.services" />
		</on-entry>
		<transition on="selectedService" to="selectAction" validate="true" validation-hints="'step1'" />
		<transition on="goBack" to="review" validate="false"/>
		<transition on="cancel" to="cancel" validate="false" />
	</view-state>
	
	<view-state id="selectAction" view="transaction/select-action" model="action">
		<on-entry>
			<evaluate expression="transactionHandler.loadActions(action)" result="flowScope.actions" />
		</on-entry>
		<transition on="selectedAction" to="review" validate="true" validation-hints="'step1,step2'">
			<evaluate expression="transactionHandler.addActionToTransaction(transaction, action)" />
		</transition>
		<transition on="selectedActionAndAddAnother" to="selectService" validate="true" validation-hints="'step1,step2'">
			<evaluate expression="transactionHandler.addActionToTransaction(transaction, action)" />
			<evaluate expression="transactionHandler.startAddAction()" result="flowScope.action" />
		</transition>
		<transition on="goBack" to="selectService" validate="false" />
		<transition on="cancel" to="cancel" validate="false" />
	</view-state>
	
	<view-state id="cancel" view="transaction/cancel-confirm">
		<transition on="confirm" to="backToList" history="invalidate" />
		<transition on="deny" to="createTransaction" />
	</view-state>
	
	<end-state id="backToDetail">
		<output name="transaction_id" />
	</end-state>
	
	<end-state id="backToList" />
	
</flow>