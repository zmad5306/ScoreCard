<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">
                          
	<on-start>
		<evaluate expression="transactionsHandler.loadTransactions()" result="flowScope.transactions" />
	</on-start>
                          
	<view-state id="list" view="portal/transaction/list" model="transactions">
		<transition on="selectTransaction" to="transactionDetailSub">
			<set name="flashScope.transaction_id" value="requestParameters.transaction_id" />
		</transition>
		<transition on="addTransaction" to="addTransactionSub" />
	</view-state>
	
	<subflow-state id="transactionDetailSub" subflow="portal/transaction/detail">
		<input name="transaction_id" />
		<transition on="backToList" to="list">
			<evaluate expression="transactionsHandler.loadTransactions()" result="flowScope.transactions" />
		</transition>
	</subflow-state>
	
	<subflow-state id="addTransactionSub" subflow="portal/transaction/add">
		<transition on="backToDetail" to="transactionDetailSub">
			<evaluate expression="transactionsHandler.loadTransactions()" result="flowScope.transactions" />
		</transition>
	</subflow-state>
	
</flow>