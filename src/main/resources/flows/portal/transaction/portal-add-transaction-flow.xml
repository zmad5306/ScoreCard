<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">
                          
	<on-start>
		<evaluate expression="transactionHandler.init()" result="flowScope.transaction" />
	</on-start>

	<view-state id="createTransaction" view="portal/transaction/add" model="transaction">
		<transition on="saveTransaction" to="addOrReview" validate="true" />
		<transition on="cancel" to="cancel" validate="false" />
	</view-state>
	
	<action-state id="addOrReview">
		<evaluate expression="transaction.getActions().size() > 0" />
		<transition on="yes" to="review" />
		<transition on="no" to="selectService">
			<evaluate expression="transactionHandler.startAddAction()" result="flowScope.action" />
		</transition>
	</action-state>
	
	<view-state id="review" view="portal/transaction/review">
		<transition on="addNewAction" to="selectService">
			<evaluate expression="transactionHandler.startAddAction()" result="flowScope.action" />
		</transition>
		<transition on="submitToServer" to="redirect" history="invalidate">
			<evaluate expression="transactionHandler.save(flowScope.transaction)" result="flowScope.transactionId" />
		</transition>
		<transition on-exception="us.zacharymaddox.scorecard.api.domain.exception.TransactionNameNotUniqueException" to="createTransaction">
			<set name="flashScope.duplicateTransaction" value="true" />
		</transition>
		<transition on="editName" to="createTransaction" />
		<transition on="cancel" to="cancel" validate="false" />
	</view-state>
	
	<view-state id="selectService" view="portal/transaction/select-service" model="action">
		<on-entry>
			<evaluate expression="transactionHandler.loadServices()" result="flowScope.services" />
		</on-entry>
		<transition on="selectedService" to="selectAction" validate="true" validation-hints="'step1'" />
		<transition on="goBack" to="review" validate="false"/>
		<transition on="cancel" to="cancel" validate="false" />
	</view-state>
	
	<view-state id="selectAction" view="portal/transaction/select-action" model="action">
		<on-entry>
			<evaluate expression="transactionHandler.loadActions(action)" result="flowScope.actions" />
		</on-entry>
		<transition on="selectedAction" to="review" validate="true" validation-hints="'step1,step2'">
			<evaluate expression="transactionHandler.addActionToTransaction(transaction, action)" />
		</transition>
		<transition on="selectedActionAndAddAnother" to="selectService" validate="true" validation-hints="'step1,step2'">
			<evaluate expression="transactionHandler.addActionToTransaction(transaction, action)" />
			<evaluate expression="transactionHandler.startAddAction()" result="flowScope.action" />
		</transition>
		<transition on="goBack" to="selectService" validate="false" />
		<transition on="cancel" to="cancel" validate="false" />
	</view-state>
	
	<view-state id="cancel" view="portal/transaction/cancel-confirm">
		<transition on="confirm" to="cancelRedirect" history="invalidate" />
		<transition on="deny" to="createTransaction" />
	</view-state>
	
	<end-state id="redirect" view="redirect:/portal/transaction/{transactionId}?successful_add=true" />
	
	<end-state id="cancelRedirect" view="redirect:/portal/transaction/list" />
	
</flow>