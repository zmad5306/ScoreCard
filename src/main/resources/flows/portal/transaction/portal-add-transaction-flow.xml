<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">
                          
	<on-start>
		<evaluate expression="transactionHandler.init()" result="flowScope.transaction" />
	</on-start>

	<view-state id="createTransaction" view="portal/transaction/add" model="transaction">
		<transition on="saveTransaction" to="addAction" validate="true">
			<evaluate expression="transactionHandler.createAction()" result="flowScope.action" />
		</transition>
		<transition on="cancel" to="cancel" validate="false" />
	</view-state>
	
	<view-state id="addAction" view="portal/transaction/add-action" model="action">
		<on-entry>
			<evaluate expression="transactionHandler.loadActions()" result="flowScope.actions" />
		</on-entry>
		<transition on="saveActionAndAddAnother" to="addAction" validate="true" validation-hints="'selectAction'">
			<evaluate expression="transactionHandler.addAction(transaction, action)" />
			<evaluate expression="transactionHandler.createAction()" result="flowScope.action" />
		</transition>
		<transition on="saveAction" to="review" validate="true" validation-hints="'selectAction'">
			<evaluate expression="transactionHandler.addAction(transaction, action)" />
		</transition>
		<transition on="cancel" to="cancel" validate="false" />
	</view-state>
	
	<view-state id="review" view="portal/transaction/add-review">
		<transition on="submitToServer" to="redirect" history="invalidate">
			<evaluate expression="transactionHandler.save(flowScope.transaction)" />
		</transition>
		<transition on="cancel" to="cancel" />
	</view-state>
	
	<view-state id="cancel" view="portal/transaction/add-cancel-confirm">
		<transition on="confirm" to="redirect" history="invalidate" />
		<transition on="deny" to="createTransaction" />
	</view-state>
	
	<end-state id="redirect" view="redirect:/portal/transaction/list" />
	
</flow>