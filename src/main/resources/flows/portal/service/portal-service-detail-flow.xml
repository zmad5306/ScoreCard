<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">
                          
	<input name="service_id" required="true" type="java.lang.Long" />
   
	<on-start>
		<evaluate expression="serviceHandler.lookup(service_id)" result="flowScope.service" />
	</on-start>
	
	<view-state id="detail" view="portal/service/detail" model="service">
		<transition on="deleteService" to="confirmDelete" />
	</view-state>

	<view-state id="confirmDelete" view="portal/service/confirm-delete" model="service">
		<transition on="confirm" to="redirect" history="invalidate">
			<evaluate expression="serviceHandler.delete(service_id)" />
		</transition>
		<transition on-exception="us.zacharymaddox.scorecard.api.domain.exception.ActionInUseException" to="detail">
			<set name="flashScope.actionInUse" value="true" />
		</transition>
		<transition on="deny" to="detail" />
	</view-state>
	
	<end-state id="redirect" view="redirect:/portal/service/list" />
	
</flow>