<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">

	<input name="service_id" required="true" type="java.lang.Long" />

	<on-start>
		<evaluate expression="actionHandler.newAction(service_id)" result="flowScope.action" />
	</on-start>
	
	<view-state id="addAction" view="portal/service/action/add" model="action">
		<transition on="save" to="backToDetails">
			<evaluate expression="actionHandler.save(action)" />
		</transition>
		<transition on="cancel" to="backToDetails" validate="false" />
		<transition on-exception="us.zacharymaddox.scorecard.api.domain.exception.ActionNameTakenException" to="addAction">
			<set name="flashScope.actionNameTaken" value="true" />
		</transition>
	</view-state>

	<end-state id="backToDetails">
		<output name="service_id" />
	</end-state>
	
</flow>